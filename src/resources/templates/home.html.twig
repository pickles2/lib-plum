<div>

<table class="px2-table">
	<thead>
		<tr>
			<th>server</th>
			<th>branch</th>
			<th>反映</th>
			<th>プレビュー</th>
			<th>詳細</th>
		</tr>
	</thead>
	<tbody>

{% for server_info in condition.staging_server %}
		<tr>
			<td scope="row">{{ server_info.name }}</td>
			<td>
				<select id="plum__branch-list-{{ server_info.index }}" class="px2-input" name="plum__branch-form-list">
					{% for branch_name in condition.remote_branch_list %}
						<option value="{{ branch_name }}" {{ (branch_name == 'origin/'~server_info.current_branch ? ' selected="selected"' : '') }}>{{ branch_name }}</option>
					{% endfor %}
				</select>
			</td>
			<td class="px2-text-align-center"><button type="button" data-plum-target-staging-index="{{ server_info.index }}" data-plum-method="deploy" class="px2-btn px2-btn--primary px2-btn--block">反映する</button></td>
			<td class="px2-text-align-center"><a href="{{ server_info.url }}" class="px2-btn px2-btn--block" target="_blank">プレビュー</a></td>
			<td class="px2-text-align-center"><button type="button" data-plum-target-staging-index="{{ server_info.index }}" data-plum-method="detail" class="px2-btn px2-btn--block">詳細</a></td>
		</tr>
{% endfor %}

	</tbody>
</table>

</div>
